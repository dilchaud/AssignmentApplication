<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/spacing_5"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".presentation.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_10">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/startGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/spacing_24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/endGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/spacing_24" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gameImage"
                android:layout_width="@dimen/spacing_100"
                android:layout_height="@dimen/no_spacing"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/gameDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gameTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/gameTitle"
                style="@style/SubBodyV2SemiBold"
                android:layout_width="@dimen/no_spacing"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:layout_marginTop="@dimen/spacing_10"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintEnd_toEndOf="@+id/endGuideline"
                app:layout_constraintStart_toEndOf="@id/gameImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Overwatch 2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/gameDescription"
                style="@style/SubBodyV2Regular"
                android:layout_width="@dimen/no_spacing"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:layout_marginTop="@dimen/spacing_10"
                android:ellipsize="end"
                android:lines="2"
                app:layout_constraintEnd_toEndOf="@+id/endGuideline"
                app:layout_constraintStart_toEndOf="@id/gameImage"
                app:layout_constraintTop_toBottomOf="@+id/gameTitle"
                tools:text="A hero-focused first-person team shooter from Blizzard Entertainment." />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>