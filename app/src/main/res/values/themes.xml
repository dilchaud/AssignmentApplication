<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LloydsBankingAssignment" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.LloydsBankingAssignment" parent="Base.Theme.LloydsBankingAssignment" />


    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/volte_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.01248</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">6sp</item> <!-- 24sp line height - 18sp font size -->
    </style>

    <style name="SubBodyV2SemiBold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/volte_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.00624</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="SubBodyV2Regular" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/volte</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.00624</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

</resources>